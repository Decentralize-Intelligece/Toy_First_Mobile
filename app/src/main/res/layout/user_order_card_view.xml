<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F6F6F6">

    <TextView
        android:id="@+id/txtUserToyOrderID1"
        android:layout_width="207dp"
        android:layout_height="37dp"
        android:layout_marginTop="16dp"
        android:text="OrderID"
        android:textAlignment="viewStart"
        android:textColor="#454545"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtUserOrderDate"
        android:layout_width="207dp"
        android:layout_height="37dp"
        android:layout_marginTop="88dp"
        android:text="2022.05.28"
        android:textAlignment="viewStart"
        android:textColor="#454545"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtUserOrdersOrderID"
        android:layout_width="207dp"
        android:layout_height="37dp"
        android:layout_marginTop="40dp"
        android:text="#123"
        android:textAlignment="viewStart"
        android:textColor="#FE6D40"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.086"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtUserOrderStatus"
        android:layout_width="217dp"
        android:layout_height="49dp"
        android:layout_marginTop="16dp"
        android:text="Pending"
        android:textAlignment="viewStart"
        android:textColor="#FE6D40"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.84"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnUserOrderCardView"
        android:layout_width="204dp"
        android:layout_height="68dp"
        android:layout_marginTop="52dp"
        android:backgroundTint="#FE6D40"
        android:backgroundTintMode="src_in"
        android:text="View"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:cornerRadius="20dp"
        app:icon="@drawable/view"
        app:iconPadding="0dp"
        app:iconSize="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.783"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>