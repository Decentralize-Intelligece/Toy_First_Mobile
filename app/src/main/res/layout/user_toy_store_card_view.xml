<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F4F4F4">

    <Button
        android:id="@+id/btnUserAddToCart"
        android:layout_width="204dp"
        android:layout_height="68dp"
        android:layout_marginStart="168dp"
        android:backgroundTint="#FE6D40"
        android:backgroundTintMode="src_in"
        android:text="Add to cart"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:cornerRadius="20dp"
        app:icon="@drawable/addtocart"
        app:iconPadding="0dp"
        app:iconSize="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtUserCategory"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txtUserToyName"
        android:layout_width="207dp"
        android:layout_height="37dp"
        android:layout_marginStart="152dp"
        android:layout_marginTop="16dp"
        android:text="Dinasour"
        android:textAlignment="viewStart"
        android:textColor="#FE6D40"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="@+id/imageViewUserToyImage"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtUserCategory"
        android:layout_width="207dp"
        android:layout_height="37dp"
        android:layout_marginStart="4dp"
        android:background="#FE6D40"
        android:text="Handmade"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@+id/imageViewUserToyImage"
        app:layout_constraintTop_toBottomOf="@+id/txtUserToyPrice" />

    <TextView
        android:id="@+id/txtUserToyPrice"
        android:layout_width="207dp"
        android:layout_height="37dp"
        android:layout_marginStart="4dp"
        android:text="$ 14.99"
        android:textAlignment="viewStart"
        android:textColor="#545454"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageViewUserToyImage"
        app:layout_constraintTop_toBottomOf="@+id/txtUserToyName" />

    <ImageView
        android:id="@+id/imageViewUserToyImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />
</androidx.constraintlayout.widget.ConstraintLayout>